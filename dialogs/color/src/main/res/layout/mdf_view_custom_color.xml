<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdf_color_preview_height"
        app:cardPreventCornerOverlap="false"
        app:shapeAppearance="?attr/shapeAppearanceMediumComponent">

        <View
            android:id="@+id/vCheckerBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/colorPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/etCustomValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789ABCDEF"
            android:gravity="center"
            android:background="@null"
            android:inputType="textCapCharacters" />

    </com.google.android.material.card.MaterialCardView>

    <com.michaelflisar.dialogs.views.Slider
        android:id="@+id/sliderRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp" />

    <com.michaelflisar.dialogs.views.Slider
        android:id="@+id/sliderGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp" />

    <com.michaelflisar.dialogs.views.Slider
        android:id="@+id/sliderBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp" />

    <com.michaelflisar.dialogs.views.Slider
        android:id="@+id/sliderAlpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp" />

</merge>