<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.michaelflisar.dialogs.views.AutoSizeViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.michaelflisar.dialogs.views.DateView
            android:id="@+id/mdf_date_view"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <com.michaelflisar.dialogs.views.TimeView
            android:id="@+id/mdf_time_view"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />

    </com.michaelflisar.dialogs.views.AutoSizeViewPager>

    <com.afollestad.viewpagerdots.DotsIndicator
        android:id="@+id/dots"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:dot_tint="?colorOnBackground" />

</LinearLayout>